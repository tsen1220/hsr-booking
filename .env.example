# HSR Booking Assistant Environment Variables
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES

# HSR Base URL (usually no need to change)
HSR_BASE_URL=https://irs.thsrc.com.tw/IMINT/

# ===========================================
# BOOKING PARAMETERS
# ===========================================

# Station Codes:
# 1=南港, 2=台北, 3=板橋, 4=桃園, 5=新竹, 6=苗栗
# 7=台中, 8=彰化, 9=雲林, 10=嘉義, 11=台南, 12=左營
START_STATION=2
END_STATION=12

# Date Format: YYYY/MM/DD
TRAVEL_DATE=2026/01/25

# Time (24h format, e.g., 08:00, 12:30, 18:00)
# Available: 00:00 to 23:30 in 30-min intervals
TRAVEL_TIME=08:00

# ===========================================
# TICKET COUNT
# ===========================================
ADULT_COUNT=1
CHILD_COUNT=0
DISABLED_COUNT=0
ELDER_COUNT=0
STUDENT_COUNT=0

# ===========================================
# PASSENGER INFO (for booking confirmation)
# ===========================================
PASSENGER_ID=
PASSENGER_EMAIL=
PASSENGER_PHONE=

# ===========================================
# TRIGGER TIME (Scheduled Execution)
# ===========================================
# Trigger time (optional, empty means immediate execution)
# Format: 2026-01-29T00:00:00 or 2026-01-29T00:00
# Example: Start booking at 2026-01-29 00:00:00
TRIGGER_TIME=

# ===========================================
# BROWSER SETTINGS
# ===========================================
# Set to true to run without visible browser
HEADLESS=false

# Slow down browser actions (milliseconds)
# Increase if forms are not filling correctly
SLOW_MO=300
